{
  "env": {
    "es6": true,
    "node": true,
    "commonjs": false
  },
  "extends": ["eslint:recommended", "plugin:import/recommended"],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "import/no-unresolved": 2,
    "import/no-commonjs": 2,
    "import/extensions": [2, "ignorePackages"]
  }
}
